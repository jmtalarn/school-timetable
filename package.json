{
	"name": "school-timetable",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"generate-pwa-assets": "pwa-assets-generator --preset minimal-2023 public/school-timetable-logo.svg",
		"test": "vitest --coverage",
		"find-deadcode": "ts-prune -p tsconfig.app.json",
		"i18n:extract": "formatjs extract 'src/**/*.{ts,tsx}' --ignore='**/*.d.ts' --ignore='**/*.test.{ts,tsx}' --out-file src/i18n/extracted/en.json --format simple ",
		"i18n:compile": "formatjs compile-folder src/i18n/messages src/i18n/compiled --format simple --ast ",
		"i18n:translate": "MT_PROVIDER=google node scripts/i18n-translate.mjs es ca",
		"i18n:all": "npm run i18n:extract && npm run i18n:translate && npm run i18n:compile",
		"i18n:lint": "formatjs lint 'src/**/*.{ts,tsx}' --ignore='**/*.d.ts' --ignore='**/*.test.{ts,tsx}'"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/utilities": "^3.2.2",
		"@tanstack/react-query": "^5.90.1",
		"boring-avatars": "^2.0.2",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-intl": "^7.1.11",
		"react-router-dom": "^7.9.1",
		"uuid": "^13.0.0",
		"workbox-window": "^7.3.0",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@formatjs/cli": "^6.7.2",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^24.5.2",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@vitalets/google-translate-api": "^9.2.1",
		"@vite-pwa/assets-generator": "^1.0.1",
		"@vitejs/plugin-react": "^5.0.3",
		"@vitest/coverage-v8": "^3.2.4",
		"babel-plugin-formatjs": "^10.5.39",
		"eslint": "^9.36.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.4.0",
		"jsdom": "^27.0.0",
		"ts-prune": "^0.10.3",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.7",
		"vite-plugin-pwa": "^1.0.3",
		"vitest": "^3.2.4"
	}
}
